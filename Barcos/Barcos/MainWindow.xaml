<Window x:Class="Barcos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barcos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="18" FontWeight="Bold" FontStyle="Italic">Usuario:</TextBlock>
            <TextBox x:Name="UsernameTextBox" Margin="10" Width="200"/>
            <TextBlock FontSize="18" FontWeight="Bold" FontStyle="Italic">Contraseña:</TextBlock>
            <PasswordBox x:Name="PasswordBox" Margin="10" Width="200"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="10" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
